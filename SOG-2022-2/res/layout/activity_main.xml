<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_hotizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AREAS"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="top|center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Circulo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/eRadio"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:textSize="17dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:id="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/eRadio"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="radio:"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@id/eRadio"
        android:layout_alignBottom="@+id/eRadio"
        android:gravity="left|center"
        android:textSize="17dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/bCalcularCirculo"
        android:text="CALCULAR"
        android:="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:textColor="FFFFFF"
        android:background="#3F51B5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tresultado_circulo"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/bCalcularCirculo"
        android:layout_alignStart="@+id/bCalcularCirculo"
        android:gravity="left|center"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Triangulo"
        android:id="@+id/textView5"
        android:layout_below="@+id/tresultado_circulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/eAlturaT"
        android:textSize="17dp"
        android:layout_below="@id/textView5"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="altura:"
        android:id="@+id/textView6"
        android:gravity="left|center"
        android:textSize="17dp"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/eAlturaT"
        android:layout_alignBottom="@+id/eAlturaT"/>
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/eBaseT"
            android:textSize="17dp"
            android:layout_below="@+id/textView5"
            android:layout_toStartOf="@+id/textView6"
            android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="base:"
        android:id="@+id/textView7"
        android:gravity="left|center"
        android:textSize="17dp"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@id/eBaseT"
        android:layout_alignBottom="@+id/eBaseT"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/textView8"
        android:layout_toStartOf="@id/textView6"
        android:layout_below="@id/eAlturaT"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="CALCULAR"
        android:id="@+id/bCalcularTriangulo"
        android:textColor="FFFFFF"
        android:background="3f51B5"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rectangulo"
        android:id="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bCalcularTriangulo"
        android:layout_alignParentStart="true"/>
    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/eAlturaR"
        android:textSize="17dp"
        android:layout_below="@id/textView9"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="altura:"
        android:id="@+id/textView10"
        android:gravity="left|center"
        android:textSize="17dp"
        android:layout_below="@+id/textView9"
        android:layout_toStartOf="@+id/eAlturaR"
        android:layout_alignBottom="@+id/eAlturaR"/>
    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/eBaseR"
        android:textSize="17dp"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/textView7"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="base:"
        android:id="@+id/textView11"
        android:gravity="left|center"
        android:textSize="17dp"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/eBaseR"
        android:layout_alignBottom="@+id/eBaseR"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tresultado_triangulo"
        android:gravity="left|center"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tresultado_circulo"
        android:layout_above="@+id/textView9"
        android:textSize="17dp"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="10dp"
       android:id="@+id/textView13"
       android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/bCalcularRectangulo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="58dp"
        android:background="#3F51B5"
        android:texColor="#FFFFFF"
        android:text="CALCULAR" />

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:id="@+id/tresultado_rectangulo"
       android:gravity="left|center"
       android:layout_alignParentEnd="true"
       android:layout_alignBottom="@+id/bCalcularRectangulo"
       android:textSize="17dp"/>
















</RelativeLayout>